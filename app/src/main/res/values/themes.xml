<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

        <style name="customDialog" parent="@android:style/Theme.Material.Light.Dialog">
            <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
            <item name="android:windowFrame">@null</item><!--边框-->
            <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
            <item name="android:windowIsTranslucent">true</item><!--半透明-->
            <item name="android:windowNoTitle">true</item><!--无标题-->
            <item name="android:backgroundDimEnabled">true</item><!--模糊-->

            <item name="android:windowBackground">@android:color/transparent</item>
        </style>


        <style name="mThemeAppCompat" parent="Theme.AppCompat.Light.NoActionBar">
            <!-- Customize your theme here. -->
            <item name="colorControlNormal">#000000</item>
            <item name="colorControlActivated">#000000</item>
            <item name="windowNoTitle">true</item>

            <item name="colorPrimary">#ffffff</item>
            <item name="colorPrimaryDark">#ffffff</item>
            <item name="colorAccent">#000000</item>
        </style>
    <style name="fullscreenTheme" parent="mThemeAppCompat">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>




    
    <style name="ATheme" parent="Theme.AppCompat.DayNight.NoActionBar">

        <item name="android:colorPrimary">#162039</item>
        <item name="android:windowBackground">@drawable/bg_activity_start</item>
        <item name="android:colorPrimaryDark">#162039</item>
        <item name="android:statusBarColor">#1D2846</item>
        <item name="android:colorAccent">#162039</item>
        <item name="colorAccent">#000000</item>
        <item name="colorControlNormal">#ffffff</item>
        <!-- 项目中button不规范使用会造成样式变形，这里把button样式覆盖为最普通的样式，以避免老代码样式走样-->
    </style>

    <style name="ProgressWhiteStyle" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">#ffffff</item>
    </style>
    <style name="defaultTextStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="SwitchTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- 定义开关按钮的样式 -->
        <item name="android:colorControlActivated">#ffffff</item>
        <item name="android:colorControlHighlight">#ffffff</item>
        <item name="android:colorForeground">#fafafa</item>
    </style>
    <style name="WhiteContextTheme" parent="Theme.AppCompat">
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">#70fafafa</item>
        <item name="colorAccent">#FFFFFF</item>
    </style>




</resources>