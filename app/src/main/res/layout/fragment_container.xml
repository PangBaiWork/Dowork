<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	android:id="@+id/coordinator"
	android:paddingLeft="30dp"
	android:paddingRight="30dp">

	<LinearLayout
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:weightSum="12"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:id="@+id/fragmentcontainerLinearLayout1">

		<LinearLayout
			android:layout_weight="8"
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_marginRight="6dp"
			android:layout_height="100dp">

			<androidx.cardview.widget.CardView
				android:layout_weight="1"
				app:cardCornerRadius="15dp"
				app:cardBackgroundColor="#F2F3F5"
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:layout_marginBottom="6dp">
				<TextView
					android:layout_height="match_parent"
					android:layout_width="match_parent"
					android:text="RAM占用: ..."
					android:textColor="#000000"
					android:textStyle="bold"
					android:layout_gravity="center"
					android:gravity="center"
				/>
			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				android:layout_weight="1"
				app:cardCornerRadius="15dp"
				app:cardBackgroundColor="#F2F3F5"
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:layout_marginTop="6dp">
				<TextView
					android:layout_height="match_parent"
				   android:layout_width="match_parent"
				   android:text="空间占用: ..."
				   android:textColor="#000000"
				   android:textStyle="bold"
				   android:layout_gravity="center"
				   android:gravity="center"
				   />
			</androidx.cardview.widget.CardView>

		</LinearLayout>

		<androidx.cardview.widget.CardView
			android:layout_height="100dp"
			app:cardCornerRadius="20dp"
			android:layout_weight="4"
			app:cardBackgroundColor="#F2F3F5"
			android:layout_width="match_parent"
			android:layout_marginLeft="6dp">
			<TextView
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:text="容器名称: ...\n系统名称: ...\n肯嗯嗯呢呢呢呢科技嗯嗯额大课间电脑的嫩"
				android:textColor="#000000"
				android:textSize="20sp"
				android:textStyle="bold"
				android:layout_gravity="center"
				android:gravity="left"
				android:padding="6dp"
			/>

		</androidx.cardview.widget.CardView>

	</LinearLayout>

	<androidx.cardview.widget.CardView
		android:layout_height="100dp"
		app:cardCornerRadius="20dp"
		app:cardBackgroundColor="#F2F3F5"
		android:id="@+id/ct_current"
		android:layout_width="match_parent"
		android:layout_marginTop="10dp"
		android:layout_below="@id/fragmentcontainerLinearLayout1">

		<RelativeLayout
			android:layout_height="match_parent"
			android:layout_width="match_parent">

			<LinearLayout
				android:layout_height="50dp"
				android:layout_width="50dp"
				android:layout_centerVertical="true"
				android:background="@drawable/ct_start"
				android:layout_marginLeft="20dp"
				android:layout_alignParentLeft="true"/>

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:layout_centerVertical="true"
				android:layout_alignParentRight="true"
				android:layout_marginRight="15dp"
				android:background="@drawable/ct_terminal"
				android:id="@+id/ct_terminal"/>

		</RelativeLayout>

	</androidx.cardview.widget.CardView>

</RelativeLayout>

