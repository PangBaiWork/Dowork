<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/coordinator"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingLeft="30dp"
	android:paddingRight="30dp">

	<LinearLayout
		android:id="@+id/fragmentcontainerLinearLayout1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:orientation="horizontal"
		android:weightSum="12">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="100dp"
			android:layout_marginRight="6dp"
			android:layout_weight="8"
			android:orientation="vertical">

			<androidx.cardview.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginBottom="6dp"
				android:layout_weight="1"
				app:cardBackgroundColor="#F2F3F5"
				app:cardCornerRadius="15dp">

				<TextView
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_gravity="center"
					android:gravity="center"
					android:text="RAM占用: ..."
					android:textColor="#000000"
					android:textStyle="bold"/>

			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginTop="6dp"
				android:layout_weight="1"
				app:cardBackgroundColor="#F2F3F5"
				app:cardCornerRadius="15dp">

				<TextView
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_gravity="center"
					android:gravity="center"
					android:text="空间占用: ..."
					android:textColor="#000000"
					android:textStyle="bold"/>

			</androidx.cardview.widget.CardView>

		</LinearLayout>

	<include
		layout="@layout/list_container"/>

	</LinearLayout>

	<androidx.cardview.widget.CardView
		android:id="@+id/ct_current"
		android:layout_width="match_parent"
		android:layout_height="100dp"
		android:layout_below="@id/fragmentcontainerLinearLayout1"
		android:layout_marginTop="10dp"
		app:cardBackgroundColor="#F2F3F5"
		app:cardCornerRadius="20dp">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<LinearLayout
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:layout_alignParentLeft="true"
				android:layout_centerVertical="true"
				android:layout_marginLeft="20dp"
				android:background="@drawable/ct_stop"
				android:id="@+id/ct_start_stop"/>

			<TextView
				android:text="🔹 Running"
				android:textStyle="bold"
				android:textColor="#000000"
				android:layout_height="wrap_content"
				android:layout_toLeftOf="@id/ct_terminal"
				android:layout_centerVertical="true"
				android:layout_marginRight="30dp"
				android:layout_width="wrap_content"/>

			<LinearLayout
				android:id="@+id/ct_terminal"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="15dp"
				android:background="@drawable/ct_terminal"
				android:orientation="horizontal"/>

		</RelativeLayout>

	</androidx.cardview.widget.CardView>

	<ListView
		android:layout_below="@id/ct_current"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/ct_list"/>

</RelativeLayout>

